<div class="container">
  <div class="row">
    <div class="col-4">
    </div>
    <%= form_for @user do |f| %>
        <div class="form-group row">
            <%= f.label :name, class:"col-form-label col-sm-5" %>
            <%= f.text_field :name, :maxlength => 20, class: "form-control col-sm-7" %>
        </div>
        <div class="form-group row">
            <%= f.label :current_city, class:"col-form-label col-sm-5" %>
            <%= f.text_field :current_city, :maxlength => 20, class: "form-control col-sm-7" %>
        </div>
        <div class="form-group row">
            <%= f.label :password, class:"col-form-label col-sm-5" %>
            <%= f.password_field :password, class: "form-control col-sm-7" %>
        </div>
      <%= f.file_field :avatar, as: :file %>
      <div class="form-group row">
        <div class="col-sm-5">
        </div>
          <%= f.submit "Sign Up", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
