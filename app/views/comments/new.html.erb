<div class="row">
    <div class="col-2">
    </div>
    <!-- USE A PATH HELPER INSTEAD OF THE URL -->
    <%= form_for @comment, url: "/posts/#{@post.id}/comments", method: "post" do |f| %>
        <div class="form-group row">
          <%= f.label :content, class:"col-form-label col-sm-5" %>
          <%= f.text_area :content, class: "form-control col-sm-7", size: "60x15" %>
        </div>

      <div class="form-group row">
        <div class="col-sm-5">
        </div>
          <%= f.submit "Submit", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
