<div class="row">
    <div class="col-2">
    </div>
    <%= form_for @post do |f| %>
        <div class="form-group row">
          <%= f.label :title, class:"col-form-label col-sm-3" %>
          <%= f.text_field :title, class: "form-control col-sm-9" %>
        </div>
        <div class="form-group row">
          <%= f.label :content, class:"col-form-label col-sm-3" %>
          <%= f.text_area :content, class: "form-control col-sm-9", size: "60x15"%>
        </div>

      <div class="form-group row">
        <div class="col-sm-5">
        </div>
          <%= f.submit "Submit", class:"btn btn-primary" %> &nbsp&nbsp
          <%= link_to "Cancel", user_path(@post.user_id), class:"btn btn-primary btn-md" %>
      </div>
    <% end %>
</div>
